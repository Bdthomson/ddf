<blueprint
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!--Create instance of CMSSourceActionProvider -->
    <bean id="testSourceActionProvider" class="org.codice.ddf.core.source.action.TestSourceActionProvider">
        <argument value="catalog.data.source.test"/>

        <property name="title" value="Test Source Action"/>
        <property name="url" value="codice.org"/>
        <property name="description" value="Test Source Action Provider for Codice.org"/>
        <property name="sourceId" value="a"/>
    </bean>

    <!-- Expose Test Action Provider as a service-->
    <service ref="testSourceActionProvider" interface="ddf.action.ActionProvider">
        <service-properties>
            <entry key="id" value="catalog.data.source.test"/>
        </service-properties>
    </service>

</blueprint>